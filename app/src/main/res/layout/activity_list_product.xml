<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".listProduct">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <EditText
            android:padding="10dp"
            android:id="@+id/edtSearchInList"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:hint="Tìm kiếm"
            android:background="@drawable/rectangle_4"
            />
        <ImageView
            android:id="@+id/ivSearchIconInList"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/search_icon"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Phân loại theo"
            android:textStyle="bold"
            android:padding="2dp"
            android:layout_marginTop="20dp"/>
        <Spinner
            android:id="@+id/spinSize"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp">

        </Spinner>
    </LinearLayout>


    <GridView
        android:id="@+id/recycleviewProduct"
        android:layout_width="420dp"
        android:layout_height="530dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:numColumns="3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgHomeP"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:src="@drawable/home_icon" />

        <ImageView
            android:id="@+id/ivListProductCurrent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="55dp"
            android:background="@color/focus"
            android:layout_alignParentTop="true"
            android:src="@drawable/category"
            />

        <ImageView
            android:id="@+id/img_cartInList"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="55dp"
            android:src="@drawable/cart_icon"/>
        <ImageView
            android:id="@+id/imgProfP"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="55dp"
            android:src="@drawable/account_icon" />
    </LinearLayout>
</LinearLayout>